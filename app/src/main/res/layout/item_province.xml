<?xml version="1.0" encoding="utf-8"?>
<!-- layout dáº¡ng linear vertical -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/photo_not_available" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvTitle"
        android:layout_alignEnd="@+id/ivAvatar"
        android:layout_alignLeft="@+id/ivAvatar"
        android:layout_alignRight="@+id/ivAvatar"
        android:layout_alignStart="@+id/ivAvatar"
        android:gravity="center"
        android:text="@string/name_not_available"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivAvatar"
        android:layout_alignEnd="@+id/ivAvatar"
        android:layout_alignLeft="@+id/ivAvatar"
        android:layout_alignRight="@+id/ivAvatar"
        android:layout_alignStart="@+id/ivAvatar"
        android:gravity="center"
        android:text="@string/title_not_available"
        android:textColor="@android:color/white" />


</RelativeLayout>